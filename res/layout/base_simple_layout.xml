<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/main_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/topbar"
            layout="@layout/simple_topbar" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_release_cotainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/replybar"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/comment_release_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/comment_release_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/replybar_releasebutton" />
    </LinearLayout>

    <com.buaa.buaaers.common.view.RightCornerView
        android:id="@+id/right_menu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|right"
        android:visibility="gone" >
    </com.buaa.buaaers.common.view.RightCornerView>

</FrameLayout>