<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <EditText android:id="@+id/feedback_input"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:singleLine="false"
        android:layout_marginLeft="@dimen/component_margin"
        android:layout_marginRight="@dimen/component_margin"
        android:gravity="top"
        android:hint="@string/feedback_input_hint" />
    
    <ImageView android:id="@+id/feedback_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/component_margin"
        android:layout_marginTop="4dp"
        android:src="@drawable/main_sendbutton" />

</LinearLayout>