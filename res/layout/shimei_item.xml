<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/main_bg" >
    <LinearLayout android:layout_height="fill_parent"
        android:layout_width="80dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <ImageView android:id="@+id/shimei_account_image"
            android:layout_width="60dp"
            android:layout_height="60dp"            
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:src="@drawable/example_acount_image" />
        <TextView android:id="@+id/shimei_account_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="橙子梗"
            android:textSize="10dp"
            android:textColor="@color/news_title"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true" />
        <TextView android:id="@+id/shimei_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="4分钟前"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true" />
    </LinearLayout>
    
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center" >

        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:src="#cccccc" />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shimei_type_icon"
            android:src="@drawable/main_nonelable"
            android:layout_gravity="center"/>
    </FrameLayout>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp">
        <TextView android:id="@+id/shimei_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="梁拔牙喜大普奔" />
        <TextView android:id="@+id/shimei_summary"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:minWidth="220dp"
            android:singleLine="false"/>
        <LinearLayout android:id="@+id/view_reply_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right" >
            <TextView android:id="@+id/shimei_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ywgg_sign_viewed"
                android:text="998"
                android:layout_gravity="center"/>
            <TextView android:id="@+id/shimei_reply_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ywgg_sign_reply"
                android:text="56"
                android:layout_gravity="center"/>
        </LinearLayout>        
    </LinearLayout>

</LinearLayout>